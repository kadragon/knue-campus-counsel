# Example environment variables (do not use real secrets here)

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key
OPENAI_CHAT_MODEL=gpt-4.1-mini

# Cloudflare AI Gateway Configuration (Optional - helps bypass regional restrictions)
# CF_AI_GATEWAY_ACCOUNT_ID=your-cloudflare-account-id
# CF_AI_GATEWAY_NAME=your-gateway-name
# Alternative: Custom gateway URL
# CF_AI_GATEWAY_BASE_URL=https://custom-gateway.example.com/v1/openai

# Qdrant Configuration
QDRANT_CLOUD_URL=https://your-qdrant-endpoint
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION=knue_policies
BOARD_COLLECTION=www-board-data

# Telegram Configuration
TELEGRAM_BOT_TOKEN=123456:abcde

# Webhook Configuration
WEBHOOK_SECRET_TOKEN=your-shared-webhook-secret

# RAG Configuration
BOARD_COLLECTION_TOP_K=2
POLICY_COLLECTION_TOP_K=3

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=5000
RATE_LIMIT_MAX=1
RATE_LIMIT_KV_ENABLED=true
RATE_LIMIT_KV_MEMORY_CACHE_SIZE=1000
RATE_LIMIT_KV_MEMORY_CACHE_TTL=300000
RATE_LIMIT_KV_ADAPTIVE_ENABLED=false
RATE_LIMIT_KV_CLEANUP_INTERVAL=300000
RATE_LIMIT_KV_CLEANUP_THRESHOLD=3600000

# Optional
ALLOWED_USER_IDS=123,456
LOG_LEVEL=info
